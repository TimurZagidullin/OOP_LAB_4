<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab_4_oop.Controller">
    <MenuBar>
        <Menu mnemonicParsing="false" text="Файл">
            <MenuItem fx:id="menuNew" mnemonicParsing="false" onAction="#createNew" text="Создать новый (Ctrl+N)" />
            <SeparatorMenuItem />
            <MenuItem mnemonicParsing="false" onAction="#exitApplication" text="Выход" />
        </Menu>
    </MenuBar>
    
    <ToolBar>
        <Button fx:id="btnCursor" prefWidth="100" text="Курсор" />
        <Button fx:id="btnSelect" prefWidth="120" text="Выделение" />
        <Separator orientation="VERTICAL" />
        <Label text="Фигуры:" />
        <Button fx:id="btnCircle" prefWidth="90" text="Круг" />
        <Button fx:id="btnSquare" prefWidth="90" text="Квадрат" />
        <Button fx:id="btnRectangle" prefWidth="140" text="Прямоугольник" />
        <Button fx:id="btnTriangle" prefWidth="110" text="Треугольник" />
        <Button fx:id="btnLine" prefWidth="80" text="Линия" />
        <Separator orientation="VERTICAL" />
        <Label text="Цвет:" />
        <ColorPicker fx:id="colorPicker" prefWidth="150" />
    </ToolBar>
    
    <AnchorPane VBox.vgrow="ALWAYS">
        <!-- Canvas без фиксированных размеров - размеры будут установлены через bind в Controller -->
        <!-- AnchorPane автоматически растягивает canvas на всю доступную область -->
        <Canvas fx:id="canvas" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
    </AnchorPane>
</VBox>
